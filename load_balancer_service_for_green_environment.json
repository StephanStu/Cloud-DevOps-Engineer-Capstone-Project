{
   "kind":"Service",
   "apiVersion":"v1",
   "metadata":{
      "name":"loadbalancer-for-blue-green-deployment",
      "labels":{
         "app":"loadbalancer-for-blue-green-deployment"
      }
   },
   "spec":{
      "ports": [
         {
           "protocol": "TCP",
           "port":8000,
           "targetPort":80
         }
      ],
      "selector":{
         "app":"green"
      },
      "type": "LoadBalancer"
   }
}
